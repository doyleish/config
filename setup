#!/bin/bash

## set up path 
mkdir -p $HOME/programs/bin
mkdir -p $HOME/scratch
mkdir -p $HOME/.bashrc.d
mkdir -p $HOME/.Trash

## link up dotfiles
ln -sf $HOME/config/files/vim $HOME/.vimrc
ln -sf $HOME/config/files/tmux $HOME/.tmux.conf
ln -sf $HOME/config/files/gitconfig $HOME/.gitconfig
ln -sf $HOME/config/files/Xresources $HOME/.Xresources

## i3 
mkdir -p $HOME/.config/i3
ln -sf $HOME/config/files/i3/config $HOME/.config/i3/config

## bash
ln -sf $HOME/config/files/bashrc $HOME/.bashrc
ln -sf $HOME/config/files/bash_profile $HOME/.bash_profile
ln -sf $HOME/config/files/bashrc.d/* $HOME/.bashrc.d/

## misc setup
git clone https://github.com/VundleVim/Vundle.vim.git ~/.vim/bundle/Vundle.vim
