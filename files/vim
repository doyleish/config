" Vundle Plugins
filetype off
set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()
  Plugin 'VundleVim/Vundle.vim'
  Plugin 'derekwyatt/vim-scala'
  Plugin 'airblade/vim-gitgutter'
  Plugin 'fatih/vim-go'
  Plugin 'lifepillar/pgsql.vim'
  Plugin 'vim-syntastic/syntastic'
  Plugin 'leafgarland/typescript-vim'
  Plugin 'hashivim/vim-terraform'
call vundle#end()
filetype plugin indent on


" Base VIM options
set nu
set autoindent
set expandtab
set magic
set tabstop=4
set shiftwidth=4
set incsearch
set hlsearch


" Filetype specifics
au FileType html setl tabstop=2 shiftwidth=2
au FileType javascript setl tabstop=2 shiftwidth=2
au FileType json setl tabstop=2 shiftwidth=2
au FileType xml setl tabstop=2 shiftwidth=2
au FileType yaml setl tabstop=2 shiftwidth=2
au BufNewFile,BufRead *.handlebars, *.hbs setl tabstop=2 shiftwidth=2 syntax=html
au BufNewFile,BufRead Jenkins* setl tabstop=2 shiftwidth=2 syntax=groovy



" Folding
set foldmethod=indent
set foldlevel=99
set foldenable


" Word Proc mode
hi clear SpellBad
hi SpellBad cterm=underline ctermfg=red
command Word :setlocal linebreak | 
             \ set nu& |
             \ setlocal wrap |
             \ setlocal noexpandtab |
             \ setlocal spell spelllang=en_us |
             \ set formatprg=par


" Macros + Remaps
command DeleteTrailingWhitespace :%s/\s\+$//e
nnoremap <space> za


" Syntax
" let python_highlight_all=1
syntax on
set background=dark
" Let the rxvt colors do their thing
" colorscheme solarized


" Go
set omnifunc=syntaxcomplete#Complete
let g:go_auto_type_info = 1
let g:go_auto_sameids = 1
let g:go_updatetime = 400

" TF
let g:terraform_fmt_on_save=1


" No arrow key nav
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>
inoremap <Up> <NOP>
inoremap <Down> <NOP>
inoremap <Left> <NOP>
inoremap <Right> <NOP>

" Bugfix for groovy syntax
set re=0
