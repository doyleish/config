# Color scheme "frosty"
set -g status-style "bg=colour245,fg=black"
set -g status-right-style "bg=black,fg=white"
set -g window-status-style "bg=white,fg=black"
set -g window-status-current-style "bg=red"
set -g window-status-bell-style "bg=blue"
set -g pane-border-style "fg=white"
set -g pane-active-border "fg=red"
set -g display-panes-colour "white"
set -g display-panes-active-colour "red"
set -g message-style "bg=white"
set -g mode-style "bg=white"

# Prefix
unbind C-b
set -g prefix C-a
bind C-a send-prefix

# Macros
bind * set-window-option synchronize-panes

